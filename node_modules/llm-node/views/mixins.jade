- // /mixins.jade

mixin navegacao
	nav
		ul.pager
			if (pageToken && pageToken!=0)
				li
					a(href="?pageToken=#{pageToken-perPage}")
						i.glyphicon.glyphicon-backward
						span &nbsp;Voltar página
				span &nbsp;
			else
				span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			if !nextPageToken
				span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			else
				li
					a(href="?pageToken=#{encodeURIComponent(nextPageToken)}")
						span Próxima página&nbsp;
						i.glyphicon.glyphicon-forward
