- // /views/clientes/list.jade
extends ../base.jade

block content
	h1 Clientes
	+navegacao
	.table-responsive
		table.table.table-striped.table-condensed
			thead
				tr
					th id
					th Alias
					th Num (Legado)
					th Full Name
					th Contato Financeiro
					th Contato Processual
			tbody
				each item in items
					tr
						td= item.id
						td= item.alias
						td #{item.num}&nbsp;(#{item.numLegado})
						td= item.fullName
						td
							| #{item.tratamento}&nbsp;
							a(href='mailto:#{item.emailFinanceiro}') #{item.contatoFinanceiro}
						td
							| #{item.tratamentoProcessual}
							a(href="#{item.emailProcessual}") &nbsp;#{item.contatoProcessual}
	if !items.length
		p Nenhuma pessoa encontrado.
	+navegacao
