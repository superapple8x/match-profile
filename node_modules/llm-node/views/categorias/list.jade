- // /views/categorias/list.jade
extends ../base.jade
block content
	mixin tabelaCategoria(dbName,fullName)
		h3= fullName
		.table-responsive
			table.table.table-striped.table-condensed
				thead
					tr
						th id
						th alias
				tbody
					each item in items
						if item.tipo==dbName
							tr
								td= item.id
								td= item.alias
	+tabelaCategoria('acomp','Tipos de acompanhamento')
	+tabelaCategoria('uf','Estados')
	+tabelaCategoria('status','Tipos de Status')
	+tabelaCategoria('instancia','Tipos de instância')
	+tabelaCategoria('adv','Tipos de advogado')
	+tabelaCategoria('resp','Tipos de responsável')
	+tabelaCategoria('fase','Tipos de fase')
	+tabelaCategoria('natAcao','Tipos de natureza de ação')
	+tabelaCategoria('natVara','Tipos de natureza de vara')
	+tabelaCategoria('numVara','Tipos de numero de vara')
