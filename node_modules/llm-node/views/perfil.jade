extends ./base.jade

block content
	.page-header.text-center
		h1
			span.fa.fa-anchor
			| &nbsp;Perfil do usu√°rio
		a.btn.btn-default.btn-sm(href="sair") Sair
	.row
		.col-sm-6
			.well
				h3
					span.fa.fa-user
					| &nbsp; Local
				if user.local.email
					p
						strong id
						| : #{user._id}
						br
						strong Email
						| : #{user.local.email}
						br
						strong Senha
						| : #{user.local.password}
					a.btn.btn-default(href="/unlink/local") Desconectar
				else
					a.btn.btn-default(href="/connect/local") Conectar conta local
		.col-sm-6
			.well
				h3.text-primary
					span.fa.fa-facebook
					| &nbsp;Facebook
				if user.facebook.token 
					p
						strong id
						| : #{user.facebook.id}
						br
						strong Token
						| : #{user.facebook.token}
						br
						strong Email
						| : #{user.facebook.email}
						br
						strong Nome
						| : #{user.facebook.name}
					a.btn.btn-default(href="/unlink/facebook") Desconectar facebook
				else
					a.btn.btn-default(href="/connect/facebook") Conectar facebook
