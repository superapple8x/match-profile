extends ./base.pug

block content
  h3 Item &lsquo;#{item.name}&rsquo;
    small

  .btn-group
    a(href='/#{item.id}/edit', class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit item
    a(href='/#{item.id}/delete', class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete item
  .media
    .media-body
      h4= item.id
      h4= item.number
      h4= item.color
