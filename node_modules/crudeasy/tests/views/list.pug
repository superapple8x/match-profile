extends ./base.pug
block content
	h3 List of items
		.form-group.row
			.col-sm-2
				a(href="/new", class='btn btn-success btn-sm')
					i.glyphicon.glyphicon-plus
					span &nbsp;New item
		.table-responsive
			table.table.table-striped.table-condensed
				thead
					tr
						th id
						th name
						th number
						th color
				tbody
					each item in items
						tr
							td
								a(href="/#{item.id}") #{item.id}
							td
								a(href="/#{item.id}") #{item.name}
							td
								a(href="/#{item.id}") #{item.number}
							td
								a(href="/#{item.id}") #{item.color}
	if nextPageToken
		nav
			ul.pager
				li
					a(href="?pageToken=#{encodeURIComponent(nextPageToken)}", class="btn btn-primary btn-sm") More
